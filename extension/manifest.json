{
  "manifest_version": 3,
  "name": "AI Shield",
  "version": "1.1.0",
  "description": "Local-first security scanner for AI text, deepfake images, and phishing content.",

  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Shield"
  },

  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:8000/*", "http://localhost:8000/*"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
